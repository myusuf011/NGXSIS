@Scripts.Render("~/bundles/jqueryval")
@section Scripts {
}

<script type="text/javascript">
    $("#form-create").submit(function  (){
        $.ajax({
            url:this.action,
            type:this.method,
            data: $(this).serialize(),
            success:function (result) {
                if (result.success) {
                    alert("save successfull certificate_name : " +   result.entity.certificate_name);
                    $(".modal").modal("hide");
                    GetList();
                } else {
                    alert("error" +result.message);
                }
            }
               });
    return false;
    });
</script>



