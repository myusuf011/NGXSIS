@model ngxsis.ViewModel.SertifikasiViewModel

<h3>Are you sure you want to delete this?</h3>
<div>


    @*<img src="sampah.jpg" />*@


    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>

    @using (Html.BeginForm("Delete", "Sertifikasi", FormMethod.Post, new { id = "form-delete", name = "form-delete" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.certificate_name)
        /*  @Html.HiddenFor(model => model.Name)*/

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <input type="button" value="Cencel" data-dismiss="modal" class="btn btn-default" />
        </div>
    }
</div>

@Scripts.Render("~/bundles/jqueryval")
@section Scripts {
}

<script type="text/javascript">
  //di delete
    $("#form-delete").submit(function  (){
        $.ajax({
            url:this.action,
            type:this.method,
            data: $(this).serialize(),
            success:function(result) {
                if (result.success) {
                    alert("save successfull Name: " + result.entity.certificate_name);
                    $(".modal").modal("hide");
                    GetList();
                } else {
                    alert("error" +result.message);
                }
            }
               });
    return false;
    });
</script>