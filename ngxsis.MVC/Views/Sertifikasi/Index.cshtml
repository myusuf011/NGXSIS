        <!--data-list  harus sama dg yg di javascript jquery--->
        Loading . . .
    </div>
</div>


<!--j query untuk nampilkan listnya-->


@section Scripts{

    <script type="text/javascript">
        $(document).ready(function(){
            GetList(); // INI adalah pemicu js yg ada di index.html
        });

        function GetList() {
            $.ajax({ // ajax sbg duta dr backend ke frontend
                url:'@Url.Action("List", "Sertifikasi")',
                type: 'get',
                success : function (result) {
                    $("#data-list").html(result);
                }
            });
        }


        $("#btn-create-new").click(function (){
            $.ajax({
                url:'@Url.Action("Create", "Sertifikasi")',
                type:'get',
                success : function (result) {
                    $(".modal-title").html("Create new");
                    $(".modal-body").html(result);
                    $(".modal").modal("show");
                }
            });

        });






    </script>

}
<div class="modal fade" tabindex="-1" role="dialog">
