@model ngxsis.ViewModel.KeahlianViewModel


@using (Html.BeginForm("Edit", "Keahlian", FormMethod.Post, new { id = "form-edit", name = "form-edit" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.id)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.skill_name, htmlAttributes: new { @class = "control-label col-md-offset-1" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.skill_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.skill_name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.skill_level_id, htmlAttributes: new { @class = "control-label col-md-offset-1" })
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.skill_level_id,
                            (IEnumerable<SelectListItem>)ViewBag.KeahlianList,
                            "- Pilih -", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.skill_level_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.notes, htmlAttributes: new { @class = "control-label col-md-offset-1" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.notes, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.notes, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="btn-group col-md-offset-9">
                    <input type="button" value="Batal" data-dismiss="modal" class="btn btn-batal" />
                    <input type="submit" value="Simpan" class="btn btn-simpan" />
                </div>
            </div>
        </div>
    </div>

}

@Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
    $("#form-edit").submit(function () {
        $.ajax({
            url: this.action,
            type: this.method,
            data: $(this).serialize(),
            success: function (result) {
                if (result.success) {
                    alert("Data berhasil disimpan");
                    $(".modal-utama").modal("hide");
                    GetList();

                }
                //else {
                //    alert("Error! " + result.message);
                //}
            }
        });
        return false;
    });
</script>