<link href="~/Content/LainLain.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <button type="button" id="tambah-tes" class="btn btn-pp btn-lg btn-120px pull-right" data-id="@ViewBag.idTest"><b>Tambah Tes</b></button>
        </div>
    </div>

    <div class="row">
        <div id="tabel-tes-detail"></div>        
    </div>

    <div class="row">
        <div class="col-lg-12 pull-right">
            <button type="button" class="btn btn-batal btn-lg btn-150px pull-right"><b>Kembali</b></button>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        GetTabelListTesDetail();
    });

    function GetTabelListTesDetail() {
        $.ajax({
            url: '@Url.Action("TabelListTesDetail", "AktivasiAkun")',
            type: 'get',
            data: { idTes: @ViewBag.idTest },
            success: function (result) {
                $("#tabel-tes-detail").html(result);
            }
        });
    };

    $("#tambah-tes").click(function () {
        $.ajax({
            url: '@Url.Action("TambahTes", "AktivasiAkun")',
            type: 'get',
            data: { idTes: $(this).attr('data-id') },
            success: function (result) {
                $(".modal-kecil .modal-title").html("Tambah Tes");
                $(".modal-kecil .modal-body").html(result);
                $(".modal-kecil").modal("show");
            }
        });
    });
    

    $(".btn-batal").click(function () {
        $(".modal-create").modal("hide");
        $(".modal-pelamar").modal("show");
    });

    $(".close").click(function () {
        $(".modal-create").modal("hide");
        $(".modal-pelamar").modal("show");
    });

</script>


