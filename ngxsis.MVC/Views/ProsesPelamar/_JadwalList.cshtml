@model IEnumerable<ngxsis.ViewModel.JadwalViewModel>


<div class="container">

    @foreach (var item in Model)
    {
        <div class="row" style="margin-bottom:10px;font-size:12px;color:#000080;">
            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                @Html.DisplayFor(modelItem => item.ScheduleDateStr),
                @Html.DisplayFor(modelItem => item.ScheduleTime)
            </div>
            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                @Html.DisplayNameFor(model => model.RoName) : @Html.DisplayFor(modelItem => item.RoName)<br />
                @Html.DisplayNameFor(model => model.TroName) : @Html.DisplayFor(modelItem => item.TroName)<br />
                @Html.DisplayNameFor(model => model.Location) : @Html.DisplayFor(modelItem => item.Location)<br />
                @Html.DisplayNameFor(model => model.ScheduleTypeName) : @Html.DisplayFor(modelItem => item.ScheduleTypeName)<br />
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="text-align:right;">
                <span class="glyphicon glyphicon-trash btn-delete" data-container="@item.JadwalId" style="padding-top:20%;" aria-hidden="true"></span>
            </div>
        </div>
    }
</div>

<script type="text/javascript">

    $(".btn-delete").click(function ()
    {
        $.ajax(
            {
                url: '@Url.Action("Delete","ProsesPelamar")',
                type: 'post',
                data: { id: $(this).data("container"), bioId: bioId, type: 1 },
                success: function (result)
                {
                    if (result.success)
                    {
                        GetSchedule();
                    }
                }
            });
    });

</script>
