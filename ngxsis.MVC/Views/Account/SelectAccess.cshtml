@model ngxsis.ViewModel.SelectAccessViewModel

@{
    Layout = null;
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Select Access</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/StyleLogin.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-top: 13%">
        <div class="row">
            <div class="col-sm-3">
                <a href="@Url.Action("Logout","Login")">Logout</a>
            </div>
            <div class="col-sm-6">
                <div class="panel panel-xsis">
                    <!-- Default Panel Contents -->
                    <div class="panel-heading">
                        Hai, @Session["userName"]
                    </div>
                    <div class="panel-body tengah" style="margin-top: 2px;">
                        <p style="font-size:9pt; font-weight: bold;">Selamat datang di XSIS 2.0, silahkan pilih akses anda</p>
                    </div>

                    <!-- Table -->
                    <div id="data-list">
                        Loading....
                    </div>
                </div>

                @using (Html.BeginForm("SelectAccess", "Account", FormMethod.Post, new
                {
                    id = "form-select-access",
                    name = "form-select-access"
                }))
                {
                    
                }
            </div>
            <div class="col-sm-3">
            </div>
        </div>
    </div>
</body>
</html>
