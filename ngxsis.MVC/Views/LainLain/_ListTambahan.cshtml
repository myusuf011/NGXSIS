                    }
                    else
                    {
                        <div class="col-md-3" style="left:-30px;"> @Html.DisplayFor(model => model.psychotest_needs) </div>
                    }
                </td>
            </tr>
            <tr>
                <td>
                    <div class="col-md-8" style="left: -15px;"> Kapan (Waktu Psikotes) </div>
                    <div class="col-md-1" style="right:5px;">:</div>
                    @if (Model.psychotest_time == null)
            {
                        <div class="col-md-3" style="left:-30px;"> - </div>
                    }
                    else
                    {
                        <div class="col-md-3" style="left:-30px;"> @Html.DisplayFor(model => model.psychotest_time) </div>
                    }
                </td>
            </tr>
            <tr>
                <td>
                    <div class="col-md-8" style="left: -15px;"> Keterangan Lain </div>
                    <div class="col-md-1" style="right:5px;">:</div>
                    @if (Model.other_notes == null)
            {
                        <div class="col-md-3" style="left:-30px;"> - </div>
                    }
                    else
                    {
                        <div class="col-md-3" style="left:-30px;"> @Html.DisplayFor(model => model.other_notes) </div>
                    }
                </td>
            </tr>
        </table>
    </div>
    <div class="row">
        <div class="col-md-offset-9">
            <div class="btn-group" role="group" aria-label="...">
                <input type="button" value="Tutup" class="btn btn-tutup btn-more" />
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(".btn-tutup").click(function () {
        $(".modal-detail-tambahan").modal("hide");
        $(".modal-pelamar").modal("show");
    });


    $(".close").click(function () {
        $(".modal-detail-tambahan").modal("hide");
        $(".modal-pelamar").modal("show");
    })
</script>




