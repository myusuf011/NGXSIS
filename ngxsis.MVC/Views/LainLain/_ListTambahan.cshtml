                    }
                </td>
            </tr>
            <tr>
                <td>
                    <div class="col-md-8" style="left: -15px;"> Keperluan Psikotes </div>
                    <div class="col-md-1" style="right:5px;">:</div>
                    @if (Model.psychotest_needs == null)
