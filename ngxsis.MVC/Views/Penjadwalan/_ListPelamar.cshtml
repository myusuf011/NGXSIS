@model IEnumerable<ngxsis.ViewModel.BiodataViewModel>

<div style="font-size:medium; color:#000080;font-weight:600;">
    Pelamar
    <hr style="border:1px solid #000080; margin-top:4px; margin-bottom:12px;" />
</div>
<div class="PelamarList" style="width:100%;">
    @foreach (var item in Model)
    {
        <div class="row" style="padding-bottom:0px;padding-top:0px;margin-bottom:0px;margin-left:-20px;">
            <div class="checkbox" style="vertical-align:middle;padding-bottom:0px;padding-top:0px;margin-bottom:3px;margin-top:3px;">
                <label style="font-size:15px;margin-bottom:0px; color:black;">
                    <input title="@item.fullname" type="checkbox" value="@item.id">
                    <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>
                    @item.fullname
                </label>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    var val;
    $(document).ready(function ()
    {
        var array = @Html.Raw(Json.Encode(ViewBag.RoleList));
        for(var i = 0; i < array.length; i++) {
            $(".PelamarList").find(".row").each(function (item)
            {
                val = $(this).find(".checkbox").find("input[type=checkbox]").val();
                if(val==array[i].id)
                {
                    $(this).find("input[type=checkbox]").attr("checked","checked");
                }
            });

        }
    });
</script>
