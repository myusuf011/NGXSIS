            return false;
        }
        );


        function GetPenjadwalanUndangan() {
            $.ajax({
                url: '@Url.Action("List", "PenjadwalanUndangan")',
                type: 'get',         
                success: function (result) {
                    $("#data").html(result);
                    
                }
            });
        }


        /*ROW PER PAGE*/
        $(".btn-list").click(function () {
            page = 0; //halaman
            dataPerPage = $(this).attr("data-container");
            GetList();
        });
        /*GO TO PREVIOUS PAGE*/
        function min() {
            if (page > 0) {
                page = page - 1;
            }
            console.log(page);
            GetList();
        };
        /*GO TO NEXT PAGE*/
        function plus() {
            if (page < maxPage) {
                page = page + 1;
            }
            console.log(page);
            GetList();
        };



        /*SORT ASCENDING*/
        $(".sort-asc").click(function () {
            desc = 0;
            page = 0;
            GetList();
        });

        /*SORT DESCENDING*/
        $(".sort-desc").click(function () {
            desc = 1;
            page = 0;
            GetList();
        });




        $("#btn-create-new").click(function () {
            $.ajax({
                url: '@Url.Action("Create", "PenjadwalanUndangan")',
                type: 'get',
                success: function (result) {
                    $(".modal-create .modal-title").html("Buat Undangan");
                    $(".modal-create .modal-body").html(result);
                   
                    $(".modal-create").modal("show");
                    $("#datepicker").datepicker({
                        dateFormat: "yy-mm-dd"
                    });
                }
            });

        });



        $(".btn-batal").click(function () {
            $(".modal-create").modal("hide");
            
        });


        $(".close").click(function () {
            $(".modal-create").modal("hide");
           
        });


    </script>

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>


}


