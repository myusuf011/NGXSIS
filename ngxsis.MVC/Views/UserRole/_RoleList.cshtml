@model IEnumerable<ngxsis.ViewModel.RoleViewModel>
@foreach (var item in Model)
{
    <div class="row" style="margin-left:20px;">
        <div class="col-sm-1" style="padding:0px 0px;">
            <input class="big-checkbox" data-container="@item.Id" type="checkbox" aria-label="...">
        </div>
        <div class="col-sm-10"style="padding:0px 0px;vertical-align:central">
            <a href="javascript:void(0)" class="btn-list" style="color:#000080;" data-html="@item.Id" data-container="@item.Name"><b>@item.Name</b></a>
        </div>
        
    </div>
}